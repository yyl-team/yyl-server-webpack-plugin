{
  "version": "1.0.5",
  "main": "output/index.js",
  "types": "output/index.d.ts",
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "yyl-react"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/output",
    "/test"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "scripts": {
    "bootstarp": "yarn install & npm run prettier",
    "eslint": "eslint --ext=jsx,ts,tsx ./",
    "prettier": "prettier --write ./**",
    "dev": "rollup --config ./rollup.config.js",
    "d": "rollup --config ./rollup.config.js",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.js",
    "w": "rollup --watch --config ./rollup.config.js",
    "doc": "typedoc src/index.ts --plugin typedoc-plugin-markdown",
    "prepublishOnly": "npm run prettier & npm test & npm run doc",
    "test": "npm run build & jest ./test/jest/"
  },
  "peerDependencies": {
    "webpack": ">=5.0.0",
    "webpack-cli": ">=4.0.0",
    "webpack-dev-server": ">=3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-yyl-react": "^0.1.9",
    "jest": "26.6.3",
    "prettier": "^2.0.4",
    "rollup": "^2.38.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "typedoc": "^0.20.23",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.3",
    "webpack": "^5.24.3",
    "yyl-fs": "^0.3.3",
    "yyl-os": "^0.11.4",
    "yyl-util": "^2.3.9"
  },
  "name": "yyl-server-webpack-plugin",
  "description": "yyl server webpack plugin",
  "repository": "https://github.com/jackness1208/yyl-server-webpack-plugin.git",
  "author": "liudaojie <liudaojie@yy.com>",
  "license": "MIT",
  "dependencies": {
    "@types/webpack-dev-server": "^3.11.2",
    "tapable": "^2.2.0",
    "yyl-config-types": "^0.3.17",
    "yyl-webpack-plugin-base": "^0.2.1"
  }
}
